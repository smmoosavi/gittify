[alias]
	lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
	glg = !git lg --graph
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
	tr = !LESS="-RFX" git tree
	unstage = reset HEAD
	last = log -1 HEAD
	visual = !gitk
	st = status
	uncommit = reset --soft HEAD^
	progress = diff --stat
	pg = diff --shortstat
	up = checkout
[color]
	ui = auto
[core]
	editor = vim
[push]
	default = simple
